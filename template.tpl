//Define all required GTM APIs
const injectScript = require('injectScript');
const log = require('logToConsole');
const random = require('generateRandom');
const queryPermission = require('queryPermission');
const sendPixel = require('sendPixel');
const makeTableMap = require('makeTableMap');

//Defined data parameters to send
const params = data.paramList;
const activityID = data.activityID;
const JSON = params ? makeTableMap(data.paramList, 'name', 'value') : {};

//Defined initial request url endpoint
let url = "HTTPS://bs.serving-sys.com/Serving/ActivityServer.bs?cn=as&ActivityID=" + activityID + "&rnd=" + random(0, 9000000);

//Function to convert object into query string parameters
function objectParametize(obj, delimeter, q) {
    var str = [];
    if (!delimeter) delimeter = '&';
    for (var key in obj) {
        switch (typeof obj[key]) {
            case 'string':
            case 'number':
                str[str.length] = key + '=' + obj[key];
            break;
            case 'object':
                str[str.length] = objectParametize(obj[key], delimeter);
        }
    }
    return (q === true ? '?' : '') + str.join(delimeter);
}

//Defined the final request url with query parameters
let URL = '';
if (params) {
   URL = url + "&" + objectParametize(JSON);
   log(url + "&" + objectParametize(JSON));
} else {
   URL = url;
   log(url);
}

//Inject script or send pixel request depending on the endpoint
if (URL) {
  injectScript(URL, data.gtmOnSuccess(), data.gtmOnFailure());
  log('Sizmek: Script Loaded Successfully');
} else {
  log('Sizmek: Script Failed');
  data.gtmOnFailure();
}


